services:
  db:
    image: postgres:15.4
    env_file: ./backend/.env
    ports: 
      - 5432:5432
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U $$POSTGRES_USER -d $$(POSTGRES_DB)"]
      interval: 30s
      timeout: 10s
      retries: 5
  # migrations:
  #   build: ./backend
  #   command: python manage.py migrate
  #   volumes:
  #     - ./backend:/app
  #   depends_on:
  #     - db
  
  backend:
    build: ./backend
    command: python manage.py runserver 0.0.0.0:8000
    stdin_open: true
    tty: true
    volumes:
      - ./backend:/app
    ports:
      - 8000:8000
    depends_on:
      - db
      - migrations
  frontend:
    build: ./frontend
    volumes:
      - ./frontend:/app
      - /app/node_modules
    ports:
      - 3000:3000
    environment:
      VITE_API_URL: "http://localhost:8000"
volumes:
  postgres_data:
